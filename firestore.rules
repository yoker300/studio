rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for user profiles.
    match /users/{userId} {
      // Allow any signed-in user to read profiles for collaborator search.
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      
      // A user can only create or update their own profile.
      allow create, update: if isSignedIn() && request.auth.uid == userId;

      // Disallow deleting profiles for privacy.
      allow delete: if false;
      
      // Rules for user settings subcollection
      match /settings/{settingsId} {
        // A user can only read or write their own settings.
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // Rules for the root 'lists' collection.
    match /lists/{listId} {
      // A user can get a specific list if they are the owner or a collaborator.
      allow get: if isSignedIn() && (resource.data.ownerId == request.auth.uid || request.auth.uid in resource.data.collaborators);

      // A user is allowed to execute a 'list' query if that query is constrained
      // to only request documents they are allowed to 'get'.
      // The app code enforces this with `where("ownerId", "==", uid)` and `where("collaborators", "array-contains", uid)`.
      allow list: if isSignedIn();

      // A user can create a list if they are authenticated and set themselves as the owner.
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      
      // Only the owner of a list can update or delete it.
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    // Rules for the root 'recipes' collection.
    match /recipes/{recipeId} {
      // A user can get a specific recipe if they are the owner or a collaborator.
      allow get: if isSignedIn() && (resource.data.ownerId == request.auth.uid || request.auth.uid in resource.data.collaborators);

      // A user is allowed to execute a 'list' query if that query is constrained
      // to only request documents they are allowed to 'get'.
      allow list: if isSignedIn();

      // A user can create a recipe if they are authenticated and set themselves as the owner.
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;

      // Only the owner of a recipe can update or delete it.
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }
  }
}
